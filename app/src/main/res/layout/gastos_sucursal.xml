<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fichaGastos"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:animateLayoutChanges="true"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/marco_gastos"
        android:orientation="horizontal">

        <!-- Tu contenido dentro del CardView -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewSucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sucursal"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextMonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monto"
                android:layout_margin="1dp"
                android:inputType="numberDecimal"
                android:textSize="15sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/corporativoCheckBox"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:buttonTint="#000000"
            android:tooltipText="Seleccionar si el gasto se cobra en Corporativo" />

        <CheckBox
            android:id="@+id/deducibleCheckBox"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:buttonTint="@color/acvblue"
            android:tooltipText="Seleccionar si el gasto es deducible" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:buttonTint="@color/acvorange"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/idRondines"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="text"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
