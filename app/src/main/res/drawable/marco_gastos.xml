<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Bordes grises -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/acvwhite" /> <!-- Color de los bordes grises -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Capa 2: Fondo blanco con esquinas redondeadas -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
</layer-list>
